<% if (!user) { %>
  <div style="width:500px;height:180px;">
    <h2 style="font-size:40px;">Welcome! Please log in.</h2>
    <a href="/auth/facebook"><img src="fb-login.jpg" width="151" height="24"></a>
    <a href="/auth/twitter"><img src="sign-in-with-twitter-l.png" width="151" height="24"></a>
    <a href="/auth/google">Sign In with Google</a>
    <a href="role1.ejs">link text</a>	
    </div>
<% } else if (user.role === "1") { %>
    <h2>Hello, <%= user.username %>.</h2>
    <h2>role 1</h2>
<% }else {%>
    <h2>Hello, <%= user.username %>.</h2>
    <h2>No role</h2>
    <a href="role1">1</a>
    <a href="role2">2</a>
    <a href="role3">3</a>
<%} %>
